%two-colum-look with right-aligned left column and left-aligned right column
\newcommand{\cbxitwocol}[2]%
{
\begin{tabular}%
{p{0.34\linewidth} p{0.65\linewidth}}
\raggedleft#1 & \raggedright#2
\end{tabular}
}

%command to store given information in boxes
%these commands are used in the document
\newcommand{\cbxsource}[2][]{\begin{flushright}Quelle: #2\\#1\end{flushright}}
\newcommand{\cbxnote}[1]{\cbxitwocol{}{\fbox{#1}}}
\newcommand{\cbxcomplexity}[1]{\cbxitwocol{Schwierigkeitsgrad}{#1}}
\newcommand{\cbxportion}[1]{\cbxitwocol{Portionen}{#1}}
\newcommand{\cbxpreparationtime}[2]{\cbxitwocol{Zubereitungszeit}{#1:#2}}
\newcommand{\cbxtemperature}[2]{\cbxitwocol{#1}{#2}}
\newcommand{\cbxenergy}[2]{\cbxitwocol{Nährwert}{#1 kJ / #2 kCal}}
\newcommand{\cbxprotein}[1]{\cbxitwocol{Eiweiß}{#1}}
\newcommand{\cbxcarb}[1]{\cbxitwocol{Kohlenhydrate}{#1}}
\newcommand{\cbxfat}[1]{\cbxitwocol{Fett}{#1}}
\newcommand{\cbxstep}[2]{\cbxitwocol{#1}{#2}}

\newenvironment{cbxrecipe}[1]{\section{#1}}{}

\endinput
